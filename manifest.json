{
  "manifest_version": 3,
  "name": "AutoSense - Behavior-Driven Automation",
  "version": "1.0.0",
  "description": "Automatically detect and suggest automations based on your browsing patterns",
  
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "notifications",
    "scripting"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/confirmation-dialog.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "action": {
    "default_popup": "ui/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.jpg",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.jpg",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}