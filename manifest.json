{
  "manifest_version": 3,
  "name": "AutoSense - Smart Tab Automation",
  "version": "2.0.0",
  "description": "Intelligent behavior-driven tab automation with advanced pattern detection",
  
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "notifications",
    "scripting",
    "sidePanel"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  
  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/confirmation-dialog.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "action": {
    "default_title": "AutoSense - Open Side Panel"
  },
  
  "icons": {
    "16": "icons/icon16.jpg",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline';"
  }
}